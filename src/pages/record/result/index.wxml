<!--index.wxml-->
<view class="wrap">

    <wxs src="../../../wxs/filter.wxs" module="filter" />

    <image class="bg" mode="widthFix" src="../../../assets/images/box-bg.jpg"></image>

    <view class="user-section">
        <image class="user-avatar" src="{{user$.avatarUrl}}"></image>
        <text>亲爱的</text>
        <text class="user-nickname">{{user$.nickName}}</text>
        <text class="user-prompt">您的本次血糖值v</text>
    </view>

    <view class="blood-section">
        <view class="blood-inner">
            <view class="blood-ring blood-bg"></view>
            <view class="blood-ring blood-bg"></view>
            <view class="blood-ring blood-bg"></view>
            <view class="blood-ring blood-border"></view>
            <view class="blood-ring blood-border"></view>
            <view class="blood-ring blood-border"></view>
            <view class="blood-ring blood-main">
                <text class="blood-number">{{params$.Bloodsugar || '--'}}</text>
                <text class="blood-unit">mmol/L</text>
                <text class="blood-time">{{base$.arrGls[params$.Gls]}}</text>
            </view>
        </view>
    </view>

    <view class="progress-section">
        <!--<view class="progress-inner">-->
            <!--<view class="progress-content"></view>-->
        <!--</view>-->

        <progress class="progress-inner" stroke-width="4" percent="{{objData.Speed}}" color="#99cccc" active/>
        <text class="progress-prompt">您本月坚持测糖 {{objData.TestDays}} 次，完成进度 {{objData.Speed}}%</text>
    </view>

    <view class="calendar-section">
        <view class="calendar-head">
            <!--<view class="calendar-time-group">-->
                <!--<view class="calendar-time-btn">-->
                    <!--<image class="calendar-btn-icon" src="../../../assets/images/zuojiantou-icon.png"></image>-->
                <!--</view>-->
                <!--<text class="calendar-time-text">{{filter.filterYear(curDate)}}</text>-->
                <!--<view class="calendar-time-btn">-->
                    <!--<image class="calendar-btn-icon" src="../../../assets/images/youjiantou-icon.png"></image>-->
                <!--</view>-->
            <!--</view>-->
            <text class="calendar-title">{{filter.filterMonthZh(curDate)}}月测糖完成记录</text>
            <!--<view class="calendar-time-group">-->
                <!--<view class="calendar-time-btn"-->
                      <!--bindtap="handlePrevMouth">-->
                    <!--<image class="calendar-btn-icon" src="../../../assets/images/zuojiantou-icon.png"></image>-->
                <!--</view>-->
                <!--<text class="calendar-time-text">{{filter.filterMonth(curDate)}}</text>-->
                <!--<view class="calendar-time-btn"-->
                      <!--bindtap="handleNextMouth">-->
                    <!--<image class="calendar-btn-icon" src="../../../assets/images/youjiantou-icon.png"></image>-->
                <!--</view>-->
            <!--</view>-->
        </view>
        <view class="calendar-table">
            <view class="calendar-tr">
                <view class="calendar-td"
                      wx:for="{{base$.arrWeek2}}"
                      wx:key="item">
                    <text>{{item}}</text>
                </view>
            </view>
            <view class="calendar-tr"
                  wx:for="{{objCalendar.data}}"
                  wx:key="item">
                <view class="calendar-td"
                      wx:for="{{item}}"
                      wx:for-item="day"
                      wx:key="day">
                    <view class="calendar-dot {{day.disabled && 'disabled'}} {{day.value === 1 && 'active'}}">
                        <text>{{day.text}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="button-link"><text>我的测糖方案</text></view>

</view>
